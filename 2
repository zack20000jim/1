Widget grayBoxWithTitle(String title) {
  return Padding(
    padding: EdgeInsets.only(left: 16),
    child: Column(
      crossAxisAlignment: CrossAxisAlignment.start,
      children: [
        Container(
          width: 130,
          height: 140,
          decoration: BoxDecoration(
            color: Color.fromARGB(255, 239, 244, 252),
            borderRadius: BorderRadius.circular(20),
          ),
        ),
        
        SizedBox(height: 8),
        Text(
          title,
          style: TextStyle(
            fontSize: 18,
            fontWeight: FontWeight.bold,
            color: Colors.black,
          ),
        ),
      ],
    ),
  );
}
